.toolbar
  height 40px
  background-color #303030
  color #fff
  display flex
  justify-content space-between

.toolbar-separator
  width 1px
  height 100%
  margin 1px
  background rgba(255,255,255,.12)

.shortcut-container
  padding 0 16px
  max-height 100%
  display flex
  flex-direction row
  align-items center
  mat-icon
    padding 2px

mat-icon
  color rgba(255,255,255,.7)
  transform scale(.8)
  &:hover,
  &.active
    fill #ffb300

.left-container
  display flex
  justify-content flex-start
  align-items center

.right-container
  display flex
  justify-content center
  align-items center

.search-bar,
.language-switch,
.quick-panel
  width 40px
  display flex
  justify-content center
  align-items center
  mat-icon
    transform scale(.9)
